/* pages/me/order/orderDetail/orderDetail.wxss */

.orderdetail-head {
  overflow: hidden;
  padding: 20rpx;
  margin: 20rpx 0;
  background: #fff;
}

.orderdetail-head image {
  width: 140rpx;
  height: 140rpx;
}

.head-tit {
  width: 500rpx;
  font-size: 28rpx;
  color: #363c4b;
  padding: 5rpx 20rpx 0 20rpx;
}

.head-money {
  width: 500rpx;
  font-size: 24rpx;
  color: #767676;
  padding: 20rpx 20rpx 0 20rpx;
}

.orderdetail-list {
  overflow: hidden;
  padding: 20rpx;
  background: #fff;
}

.orderdetail-list view {
  padding: 10rpx 20rpx;
}

.orderdetail-list-tit {
  font-size: 28rpx;
  color: #202020;
  padding-left: 20rpx;
}

.orderdetail-list-h1 {
  color: #767676;
  font-size: 28rpx;
  padding: 20rpx 0rpx;
}

.orderdetail-list-h2 {
  color: #202020;
  font-size: 28rpx;
  padding: 20rpx 0 20rpx 80rpx;
}

.orderdetail-bottom {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 96rpx;
  background: #fff;
  border-top: 2px solid rgba(246, 246, 246, 1);
}

.orderdetail-bottom .fl {
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 25rpx;
}

.orderdetail-bottom .fr {
  width: 178rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #dbba7b;
}

.money-h1 {
  font-size: 44rpx;
  color: #dbba7b;
}

.money-h2 {
  font-size: 26rpx;
  color: #b8b8b8;
  text-decoration: line-through;
}