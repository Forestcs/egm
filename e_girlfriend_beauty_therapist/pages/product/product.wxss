.type-btn {
  display: inline-block;
  height: 45rpx;
  width: 194rpx;
  line-height: 45rpx;
  margin: 10rpx 25rpx;
  padding: 0;
  font-size: 26rpx;
  text-align: center;
  color: rgba(51, 51, 51, 1);
  border: 1rpx dashed #e5e5e5;
  border-radius:16rpx;   
}

.now-btn {
  color: #fff;
  background: #ff9c13;
  border: 1rpx solid #e5e5e5;
  border-radius:16rpx; 
}

.type-btn::after {
  border: none;
}

.apply-container image {
  width: 230rpx;
  height: 155rpx;
  padding: 35rpx 20rpx 25rpx 20rpx;
}

.item-flex {
  display: flex;
  flex-direction: row;
  margin-bottom: 25rpx;
  background: #fff;
}

.item-center {
  width: 320rpx;
  padding: 40rpx 8rpx;
}

.item-name {
  height: 27rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.item-time {
  height: 19rpx;
  font-size: 28rpx;
  padding: 30rpx 0;
  color: rgba(153, 153, 153, 1);
}

.item-num {
  height: 27rpx;
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.item-num text {
  color: #333;
}

.item-statues {
  padding-top: 140rpx;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

.num-in {
  margin-top: 25rpx;
}

.scoll-h {
  height: 100%;
}

.apply-bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 95rpx;
  background: #fff;
}

.apply-bottom view {
  height: 95rpx;
  font-size: 26rpx;
}

.apply-all {
  line-height: 10rpx;
}

.appply-btn {
  width: 230rpx;
  text-align: center;
  line-height: 95rpx;
  background: #ff9f00;
  color: #fff;
}

.appply-del {
  width: 230rpx;
  text-align: center;
  line-height: 95rpx;
  color: #ff999999;
  background: #f5f5f5;
}

.list-type {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
  color: rgba(153, 153, 153, 1);
  background: #fff;
  text-align: center;
}
