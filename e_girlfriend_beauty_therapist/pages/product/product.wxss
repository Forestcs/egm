/* pages/product/product.wxss */

.type-top {
  overflow: hidden;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.type-tit-lf {
  float: left;
  font-size: 26rpx;
  padding: 27rpx;
  color: rgba(51, 51, 51, 1);
}

.type-tit-rg {
  float: right;
  font-size: 24rpx;
  padding: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.type-bottom {
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 173rpx;
  z-index: 1;
  background: #fff;
}

.type-block {
  display: block;
}

.type-none {
  display: none;
}

.tab-swiper {
  /* position: relative;
top: 173rpx; */
}

.tab-swiper ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

